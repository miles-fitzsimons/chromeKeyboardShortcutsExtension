{
  "name": "Close and Pin Tabs Keyboard Shortcuts",
  "version": "1.0.2",
  "description":
    "Provides keyboard shortcuts for closing tabs to the left or right, closing all other tabs, and pinning current tab.",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js", "lib/shouldTabBeClosed.js"],
    "persistent": false
  },
  "permissions": ["declarativeContent", "storage"],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/arrows16.png",
      "32": "images/arrows32.png",
      "48": "images/arrows48.png",
      "128": "images/arrows128.png"
    }
  },
  "icons": {
    "16": "images/arrows16.png",
    "32": "images/arrows32.png",
    "48": "images/arrows48.png",
    "128": "images/arrows128.png"
  },
  "commands": {
    "close-tabs-to-the-right": {
      "suggested_key": {
        "default": "Alt+Shift+Right"
      },
      "description": "Close tabs to the right"
    },
    "close-tabs-to-the-left": {
      "suggested_key": {
        "default": "Alt+Shift+Left"
      },
      "description": "Close tabs to the left"
    },
    "close-other-tabs": {
      "suggested_key": {
        "default": "Alt+Shift+Up"
      },
      "description": "Close other tabs"
    },
    "pin-current-tab": {
      "suggested_key": {
        "default": "Alt+Shift+Down"
      },
      "description": "Pin current tab"
    }
  }
}
