{
  "name": "Close Tabs Keyboard Shortcuts",
  "version": "1.0.0",
  "description":
    "Provides keyboard shortcuts for: 1) closing all tabs to the left of the current tab, 2) closing tabs to the right of the current tab, 3) closing all other tabs, and 4) pinning and unpinning the current tab. Supports ignoring or not ignoring pinned tabs.",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["declarativeContent", "storage"],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/arrows16.png",
      "32": "images/arrows32.png",
      "48": "images/arrows48.png",
      "128": "images/arrows128.png"
    }
  },
  "icons": {
    "16": "images/arrows16.png",
    "32": "images/arrows32.png",
    "48": "images/arrows48.png",
    "128": "images/arrows128.png"
  },
  "commands": {
    "close-tabs-to-the-right": {
      "suggested_key": {
        "default": "Alt+Shift+Right"
      },
      "description": "Close tabs to the right"
    },
    "close-tabs-to-the-left": {
      "suggested_key": {
        "default": "Alt+Shift+Left"
      },
      "description": "Close tabs to the left"
    },
    "close-other-tabs": {
      "suggested_key": {
        "default": "Alt+Shift+Up"
      },
      "description": "Close other tabs"
    },
    "pin-current-tab": {
      "suggested_key": {
        "default": "Alt+Shift+Down"
      },
      "description": "Pin current tab"
    }
  }
}
